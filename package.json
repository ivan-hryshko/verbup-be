{
  "name": "verbup-be",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "jest --detectOpenHandles",
    "test-d": "TEST_COMMAND=\"npm run test\" docker-compose -f docker-compose.test.yaml up --build --abort-on-container-exit",
    "test-d-list": "TEST_COMMAND=\"npm run test list-movies.test.ts\" docker-compose -f docker-compose.test.yaml up --build --abort-on-container-exit",
    "prestart": "npm run build",
    "build": "rm -rf dist && npx tsc",
    "start": "node dist/index.js",
    "start:full": "npm run seed && node dist/index.js",
    "preserve": "npm run build",
    "seed": "PG_HOST=localhost  node dist/seeds/index.js",
    "serve": "concurrently \"npx tsc -w\" \"nodemon dist/index.js\"",
    "build-iamge": "docker build -t giver0/verbup-be .",
    "image-push": "npm run build-iamge && docker image push giver0/verbup-be"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^5.0.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^22.14.1",
    "@types/supertest": "^6.0.3",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "pg": "^8.16.0",
    "supertest": "^7.1.1",
    "ts-jest": "^29.3.4",
    "typeorm": "^0.3.24"
  },
  "devDependencies": {
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
