{
  "openapi": "3.0.0",
  "info": {
    "title": "Verbup API",
    "version": "1.0.0",
    "description": "API documentation for Verbup"
  },
  "servers": [
    {
      "url": "http://localhost:8000/api/v1",
      "description": "Local dev"
    },
    {
      "url": "https://verbup-60d2d030ff70.herokuapp.com/api/v1",
      "description": "Production"
    }
  ],
  "tags": [
    {
      "name": "Auth",
      "description": "Authentication & authorization endpoints"
    },
    {
      "name": "Users",
      "description": "User management endpoints"
    },
    {
      "name": "Feedbacks",
      "description": "Feedback management endpoints"
    },
    {
      "name": "Statistics",
      "description": "Daily statistics endpoints"
    }
